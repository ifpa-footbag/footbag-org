{
  "name": "footbag-org",
  "version": "0.0.0",
  "description": "New footbag.org site",
  "main": "index.js",
  "scripts": {
    "start": "es-dev-server --app-index index.html --node-resolve --watch --open",
    "test": "karma start --coverage",
    "prettier": "prettier --write **/*.{js,json,html}",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html .",
    "lint:prettier": "prettier \"**/*.js\" --check",
    "format:prettier": "prettier \"**/*.js\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "build": "rimraf ./dist && rimraf ./docs && rollup -c rollup.config.js",
    "start:build": "npm run build && es-dev-server --root-dir docs --app-index index.html --open --compatibility none"
  },
  "author": "Jani SÃ¤ntti",
  "license": "ISC",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@open-wc/building-rollup": "^1.0.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "deepmerge": "^3.2.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "prettier": "^2.0.4",
    "rimraf": "^2.6.3",
    "rollup": "^2.3.4",
    "rollup-plugin-copy": "^3.3.0"
  },
  "dependencies": {
    "@vaadin/router": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "ignorePatterns": [
      "coverage/",
      "docs/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
